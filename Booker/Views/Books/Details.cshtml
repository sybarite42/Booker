@model Booker.Models.Book

@{
    /**/

    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

<li>Author: @Model.Author</li>
<li>Year Published: @Model.YearOfPublication</li>
<li>
    Number In Stock: @Model.NumberInStock
    (@Model.NumberRented)
</li>


@if (Session["Customer"] != null)
{

    using (Html.BeginForm("AddCustomerBook/" + Model.Id, "Books"))
    {
        <button type="submit" class="btn btn-primary">Add To Library</button>
    }
}
else
{
    using (Html.BeginForm("Edit/" + Model.Id, "Books"))
    {
        <button type="submit" class="btn btn-primary">Edit</button>
    }
}

<br />



<br />

<a class="btn btn-primary" href="~/Books/Index" role="button">Return</a>