
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

<a class="btn btn-primary" href="~/Books/New" role="button">New Book</a>

@if (Model.Count == 0)
{
    <p>There are no books yet.</p>
}
else
{
    
    <br />
    <br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Book</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@Html.ActionLink((string)book.Name, "Details", "Books", new { id = book.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}